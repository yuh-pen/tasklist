<% if logged_in? %>
  <p>ログイン完了ユーザ:<%= current_user.name %></p>
  <h1>タスク一覧</h1>
  
  <ul>
    <% @tasks.each do |task| %>
    <li><%=link_to task.id, task %> : <%= task.content %>&gt; <%= task.status %></li>
    <% end %>
  </ul>
  
 
<% else %>
<div class="center jumbotron">
  <div class="text-center">
    <%= link_to 'ユーザ登録', signup_path, class: 'btn btn-lg btn-primary' %>
  </div>
</div>
<% end %>