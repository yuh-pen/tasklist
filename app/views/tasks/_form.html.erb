<div class="row">
  <div class="col-sm-offset-2 col-sm-8 col-lg-offset-3 col-lg-6">
    

    <%= form_for(task) do |t| %>
      <% if task.errors.any? %>
      <div id ="error_ex;lanation">
        <ul>
          <% task.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
      
      <div class="form-group">
        <%= t.label :content, 'タスク' %>
        <%= t.text_field :content, class: 'form-control' %>
      </div>
      
      <div class="form-group">
         <%= t.label :status,'ステータス' %>
        <%= t.text_field :status, class:'form-control' %>
      </div>
  
  
  
  
  
 
  
  <%= t.submit '作成' %>
<% end %>